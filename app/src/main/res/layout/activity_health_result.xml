<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="건강 분석 결과"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="32dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI 정보"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/textViewBmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI: 0.0"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textViewBmiCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="분류: -"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textViewIdealWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="적정 체중 범위: 0.0kg ~ 0.0kg"
                    android:textSize="22sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="식단 조언"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/textViewDietAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="식단 조언 내용이 여기에 표시됩니다."
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동 조언"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/textViewExerciseAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동 조언 내용이 여기에 표시됩니다."
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="생활 습관 조언"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:id="@+id/textViewLifestyleAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생활 습관 조언 내용이 여기에 표시됩니다."
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로 계산하기"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:padding="20dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>